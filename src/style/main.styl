@import "cssreset.css"

$screenWidthSmaller_900 = "screen and (max-width: 900px)"
MAINWIDTH = 1140px
body
  font-family: "Open Sans",Arial,"Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif
  background-color: #0f143e
  min-width: 320px
  background-image: url('../img/star1.png')
.header
  text-align: right
  background-color: #ffffff
  @media $screenWidthSmaller_900
    text-align: left
  .container
    width: MAINWIDTH
    margin: 0 auto
    position: relative
    @media $screenWidthSmaller_900
      width: 90%
  img
    padding: 20px 0
    width: 300px
    margin-bottom: -5px
    @media $screenWidthSmaller_900
      padding: 10px 0
      width: 200px
.banner_pc
  background-image: url('../img/banner2.png')
  background-position: center 
  background-size: 1376 504px
  background-repeat: no-repeat
  background-color: #030614
  width: 100%
  height: 510px
  @media $screenWidthSmaller_900
    display: none
      
img.wap
  width: 100%
  display: none
  margin-bottom: -5px
  @media $screenWidthSmaller_900
    display: inline-block
.intro
  background-color: #201b89
  height: 302px
  width: 100%
  @media $screenWidthSmaller_900
    height: auto
  .intro-container
    position: relative
    width: MAINWIDTH
    margin: 0 auto
    box-sizing: border-box
    padding: 100px 0 0 0
    @media $screenWidthSmaller_900
      width: 80%
      padding: 50px 0
    img
      position: absolute
      width: 68px
      @media $screenWidthSmaller_900
        display: none
      &.line1
        top: 103px
        left: 472px
      &.line2
        top: 103px
        left: 853px
    .intro-text
      font-size: 16px
      color: #ffffff
      display: inline-block
      vertical-align: top
      text-align: justify
      line-height: 1.8em
      @media $screenWidthSmaller_900
        display: block
        
    .intro-text1
      width: 466px
      margin: 0 86px 0 0
      @media $screenWidthSmaller_900
        width: 100%
        margin: 0 0 40px 0
        
    .intro-text2
      width: 296px
      margin: 0 86px 0 0
      @media $screenWidthSmaller_900
        width: 100%
        margin: 0 0 40px 0
        
    .intro-text3
      width: 190px
      @media $screenWidthSmaller_900
        width: 100%
        margin: 0 0 0 0
.harry-potter
  position: relative
  background-color : #0f143e
  width: 100%
  height: 648px
  background-image: url('../img/star1.png')
  @media $screenWidthSmaller_900
    display: none
  .deng-bu
    background-image: url('../img/main.png')
    background-position: center 
    background-size: 901px 565px
    background-repeat: no-repeat
    width: 100%
    height: 100%
    position: relative
    z-index: 2
    @media $screenWidthSmaller_900
      display: none
.guest
  background-color: #0f143e
  background-image: url('../img/star1.png')
  text-align: center
  .guest-container
    width: MAINWIDTH
    margin: 0 auto
    padding: 70px 0
    @media $screenWidthSmaller_900
      width: 95%
      padding: 30px 0
      
    img.guest-title.pc
      width: 1140px
      margin 0 0 60px 0
      @media $screenWidthSmaller_900
        display: none
    img.guest-title.wap
      display: none
      @media $screenWidthSmaller_900
        width: 100%
        margin 0 auto 60px auto
        display: block       
    .guest-list-hd
      width: 100%
      text-align: left
      @media $screenWidthSmaller_900
        text-align: center
      .guest-card-item
        text-align: left
        text-decoration: none
        display: inline-block
        vertical-align: middle
        width: 340px
        height: 560px
        border-radius: 10px
        box-shadow: 0 0 33px 10px rgba(0, 0, 0, 0.11)
        background-color: #2e28a4
        box-sizing: border-box
        padding: 25px 0 0 20px
        cursor: pointer
        position: relative
        overflow: hidden
        transition: all 0.3s
        transform: perspective(500px)
        @media $screenWidthSmaller_900
          padding: 10px 10px 0 10px
          width: 46%
          height: auto
          border-radius: 5px
          
        &:hover
          box-shadow: 0 0 33px 10px rgba(0, 0, 0, 0.21)
          transform: perspective(500px) translate3d(0,0,10px)
          .date-box
            left: -41px
            padding-left: 30px
            @media $screenWidthSmaller_900
              left: -10px
              padding-left: inherit
          img.jiantou
            opacity: 1
          @media $screenWidthSmaller_900
            transform: translate3d(0,0,0)

        &.margin-right
          margin-right: 40px
          @media $screenWidthSmaller_900
            margin-right: 0px
        &.margin-right-wap
          @media $screenWidthSmaller_900
            margin-right: 10px
        &.margin-bottom
          margin-bottom: 60px
          @media $screenWidthSmaller_900
            margin-bottom: 40px
        &.margin-bottom-wap
          @media $screenWidthSmaller_900
            margin-bottom: 40px
        .img-box
          width: 300px
          height: 240px
          position: relative
          @media $screenWidthSmaller_900
            width: 100%
            height: auto
            margin: 0 auto
          img.web
            width: 100%
            transition: all 0.3s
        .date-box
          position: absolute
          width: 141px
          height: 55px
          line-height: 55px
          text-align: center
          background-color: #e03d24
          color: #ffffff
          font-size: 34px
          top: 204px
          left: -21px
          box-sizing: border-box
          transition: all 0.3s
          font-weight: bolder
          @media $screenWidthSmaller_900
            top: auto
            bottom: -5px
            left: -10px
            width: 65px
            height: 27px
            line-height: 27px
            font-size: 16px
        .card-title
          color: #ffffff
          font-size: 30px
          font-weight: bolder
          margin: 30px 0 0 10px
          height: 90px
          overflow: hidden
          @media $screenWidthSmaller_900
            font-size: 14px
            margin: 15px 0 0 0
            height: 63px
        .card-person-info
          color: #ffffff
          font-size: 21px
          font-weight: 400
          margin: 13px 0 0 10px
          height: 96px
          @media $screenWidthSmaller_900
            font-size: 12px
            margin: 7px 0 0 0
            height: 54px
            
            
        img.jiantou
          width: 75px
          margin: 18px 0 0 10px
          opacity: 0.7
          transition: all 0.3s
          @media $screenWidthSmaller_900
            width: 37px
            margin: 12px 0 0 0px
            padding: 0 0 7px 0
            opacity: 1
            
        img.logo
          position: absolute
          bottom: 14px
          right: 22px
          width: 88px
          @media $screenWidthSmaller_900
            width: 36px
            bottom: 7px
            right: 11px

.interview
  text-align: center
  background-image: url('../img/star1.png')
  .interview-container
    width: MAINWIDTH
    margin: 0 auto
    @media $screenWidthSmaller_900
      width: 100%
    img.interview-title.pc
      width: 1140px
      margin 0 auto 60px auto
      @media $screenWidthSmaller_900
        display: none
    img.interview-title.wap
      display: none
      @media $screenWidthSmaller_900
        display: block
        width: 95%
        margin 0 auto 60px auto
        
    .interview-list-hd
      a.interview-item
        width: 1140px
        height: 226px
        box-shadow: 0 0 33px 10px rgba(0, 0, 0, 0.11)
        position: relative
        display: inline-block
        margin: 0 0 50px 0
        transition: all 0.3s
        transform: perspective(500px)
        cursor: pointer
        &:hover
          box-shadow: 0 0 33px 10px rgba(0, 0, 0, 0.21)
          transform: perspective(500px) translate3d(0,0,10px)
          img.jiantou-interview
            opacity: 1 !important
        @media $screenWidthSmaller_900
          height: auto
          width: 95%
          &:hover
            transform: translate3d(0,0,0)
        a.interview-item.no-margin
          margin: 0 0 0 0
        .above
          width: 100%
          height: 76px
          background-color: #2e28a4
          @media $screenWidthSmaller_900
            height 36px
        .below
          width: 100%
          height: 150px
          background-color: #262092
          @media $screenWidthSmaller_900
            height 76px
        img.head
          position: absolute
          top: 0
          left: 0
          height: 100%
          @media $screenWidthSmaller_900
            height: 112px
            
        .name
          position: absolute
          top: 20px
          left: 300px
          font-size: 36px
          color: #ffffff
          font-weight: bolder
          @media $screenWidthSmaller_900
            top: 10px
            left: 162px
            font-size: 14px
        .touxian
          position: absolute
          top: 29px
          left: 590px
          font-size: 21px
          color: #ffffff
          font-weight: 400
          @media $screenWidthSmaller_900
            top: 8px
            left: auto
            right: 11px
            font-size: 12px
        img.jiantou-interview
          position: absolute
          top: 29px
          right: 33px
          width: 70px
          opacity: 0.7
          transition: all 0.2s
          @media $screenWidthSmaller_900
            top: 13px
            right: 33px
            width: 49px
            opacity: 1
            display: none
        .describe
          position: absolute
          top: 100px
          right: 30px
          text-align: right
          font-size: 40px
          font-weight: bolder
          color: #ffffff
          @media $screenWidthSmaller_900
            top: 49px
            right: 10px
            font-size: 14px
            font-weight: 400
            line-height: 1.8em
            
.pic-coll
  background-image: url('../img/star1.png')
  .pic-coll-container
    width: MAINWIDTH
    margin: 62px auto 30px auto
    @media $screenWidthSmaller_900
      width: 100%
    img.pic-coll-title
      width: 1140px
      margin 0 auto 60px auto
      &.pc
        @media $screenWidthSmaller_900
          display: none
      &.wap
        display: none
        @media $screenWidthSmaller_900
          display: block
          width: 95%
          
    .pic-coll-list-hd
      margin: 0 auto
      @media $screenWidthSmaller_900
        width: 95%
        text-align: center
      .pic-coll-item
        display: inline-block
        vertical-align: middle
        background-color: #ffffff
        height: 372px
        margin-bottom: 12px
        @media $screenWidthSmaller_900
          height: auto
          
        &.long
          width: 756px
          @media $screenWidthSmaller_900
            width: 64%
        &.short
          width: 372px
          @media $screenWidthSmaller_900
            width: 31%
        &.margin-right
          margin-right: 12px
.bottom-logo
  .bottom-logo-container
    text-align: center
    padding: 82px 0 0 0
    img
      width: 705px
      @media $screenWidthSmaller_900
        width: 50%
.circle
  position: absolute
  top: 400px
  left: -170px
  z-index: 1
  @media $screenWidthSmaller_900
    display: none


          
          
            

          
      
